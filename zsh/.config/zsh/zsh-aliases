# confirm before overwriting something
alias cp="cp -ivp"
alias mv='mv -iv'
alias rm='rm -i'

# exa
alias ls="exa -b --icons"
alias ll="exa -lb --header --git --icons --group-directories-first"
alias la="exa -lb --header --git --icons --all --group-directories-first"
alias lt="exa -lb --header --git --icons --tree --level=2 --group-directories-first"

# editor
alias vim="nvim"

# paths
alias obsidian="/Users/orhid/Library/Mobile\ Documents/iCloud~md~obsidian/Documents"

# cargo
alias cozjebalem="cargo clippy -- -W clippy::pedantic -W clippy::nursery"
alias naprawcozjebalem="cargo clippy --fix -- -W clippy::pedantic -W clippy::nursery"
alias gdzieniebezpiecznie="cargo clippy -- -W clippy::unwrap_used -W clippy::expect_used"
